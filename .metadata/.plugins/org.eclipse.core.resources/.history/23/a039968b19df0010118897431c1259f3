package com.example.event.controller;

import com.example.event.dto.request.CommentRequest;
import com.example.event.dto.response.CommentResponse;
import com.example.event.service.CommentService;
import jakarta.validation.Valid; // Added for validation
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/api")
public class CommentController {

    private final CommentService commentService;

    public CommentController(CommentService commentService) {
        this.commentService = commentService;
    }

    /**
     * GET all comments for an event.
     * We pass testerId to determine which comment belongs to the current viewer.
     */
    @GetMapping("/events/{eventId}/comments")
    public ResponseEntity<List<CommentResponse>> getComments(
            @PathVariable Long eventId, 
            @RequestParam(required = false) Long testerId) {
        List<CommentResponse> comments = commentService.getCommentsByEvent(eventId, testerId);
        return ResponseEntity.ok(comments);
    }

    /**
     * POST a new comment.
     * Use @Valid to ensure the content and rating are correct before reaching the service.
     */
    @PostMapping("/users/{uId}/events/{eId}/comments")
    public ResponseEntity<CommentResponse> createComment(
            @PathVariable Long uId, 
            @PathVariable Long eId, 
            @Valid @RequestBody CommentRequest request) { // Added @Valid
        CommentResponse response = commentService.createComment(uId, eId, request);
        return new ResponseEntity<>(response, HttpStatus.CREATED); // Changed to 201 Created
    }

    /**
     * PUT (Update) an existing comment.
     */
    @PutMapping("/users/{uId}/comments/{cId}")
    public ResponseEntity<CommentResponse> updateComment(
            @PathVariable Long uId, 
            @PathVariable Long cId, 
            @Valid @RequestBody CommentRequest request) { // Added @Valid
        CommentResponse response = commentService.updateComment(uId, cId, request);
        return ResponseEntity.ok(response);
    }

    /**
     * DELETE a comment.
     */
    @DeleteMapping("/users/{uId}/comments/{cId}")
    public ResponseEntity<Void> deleteComment(
            @PathVariable Long uId, 
            @PathVariable Long cId) {
        commentService.deleteComment(uId, cId);
        return ResponseEntity.noContent().build(); // Standard 204 No Content
    }
}